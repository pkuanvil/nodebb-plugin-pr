{
	"id": "@pkuanvil/nodebb-plugin-pr",
	"hooks": [
		{ "hook": "static:app.load", "method": "init" },
		{ "hook": "static:app.preload", "method": "preload" },
		{ "hook": "static:api.routes", "method": "addRoutes" },
		{ "hook": "static:user.loggedOut", "method": "loggedOut" },
		{ "hook": "filter:register.check", "method": "regCheck"},
		{ "hook": "filter:register.interstitial", "method": "interstitial" },
		{ "hook": "action:pr_register.abort", "method": "regAbort" },
		{ "hook": "filter:user.whitelistFields", "method": "user_whitelistFields" },
		{ "hook": "filter:admin.header.build", "method": "addAdminNavigation" }
	],
	"staticDirs": {
		"static": "./static"
	},
	"scss": [
		"static/scss/pr.scss"
	],
	"scripts": [
		"static/lib/main.js"
	],
	"acpScripts": [
		"static/lib/acp-main.js"
	],
	"modules": {
		"../client/pr.js": "./static/lib/pr.js",
		"../admin/plugins/pr.js": "./static/lib/admin.js"
	},
	"templates": "static/templates"
}
